<launch>
    <arg name="rviz" default="False"/>
    <arg name="config" default="$(find stop_behavior)/config/stop_behavior.yaml"
         doc="Specify a config"/>

    <arg name="output" default="screen" doc="Output display"/>
    <arg name="param_file_name" default="default" doc="Specify a param file"/>
    <arg name="req" default="true"/>

    <arg name="pkg_name" value="stop_behavior" doc="name of the package"/>
    <arg name="node_name" default="Stop Behavior" doc="name of the node"/>
    <arg name="node_type" default="stop_behavior_node.py" doc="name of the type"/>

    <node pkg="$(arg pkg_name)" type="$(arg node_type)" name="$(arg node_name)"
          output="$(arg output)" required="$(arg req)">
        <rosparam command="load" file="$(arg config)" />
    </node>
</launch>