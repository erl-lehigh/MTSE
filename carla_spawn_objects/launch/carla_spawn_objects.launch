<!-- -->
<launch>
  <arg name="role_name" default="ego_vehicle2"/>
  <arg name="objects_definition_file" default='$(find carla_spawn_objects)/config/objects.json'/>
  <!-- <use comma separated format "x,y,z,roll,pitch,yaw" >
    and parameter name spawn_point_<vehicle_name>. You can add
    as many spawn_point as vehicles defined in objects_definition_file> -->
  <arg name="spawn_point" default='200.053,-5.0,0,0,180,0'/>
  <arg name="spawn_sensors_only" default="false"/>

  <arg name="control_id" default="control"/>

  <arg name='host' default='localhost'/>
  <arg name='port' default='2000'/>
  <arg name="vehicle_filter" default="vehicle.*" />
  <arg name="sensor_definition_file" default="$(find carla_setup)/config/ego_vehicle_sensors.json"/>/>
  <arg name="remap_rviz_initialpose_goal" default="True"/>
  <arg name="spawn_ego_vehicle" default="True" />

  <param name="/carla/host" value="$(arg host)" />
  <param name="/carla/port" value="$(arg port)" />

  <!-- 
    If enabled, remap topics to support setting initialpose and goal with RVIZ

    This does not work for multiple ego-vehicles.
  -->
  <group if="$(eval remap_rviz_initialpose_goal)">
    <node pkg="topic_tools" type="relay" name="goal_relay2" args="/move_base_simple/goal /carla/ego_vehicle/goal"/>
    <node pkg="topic_tools" type="relay" name="initialpose_relay2" args="/initialpose /carla/ego_vehicle/initialpose"/>
  </group>

  <node pkg="carla_ego_vehicle" type="carla_ego_vehicle.py" name="carla_ego_vehicle_$(arg role_name)" output="screen">
    <param name="sensor_definition_file" value="$(arg sensor_definition_file)" />
    <param name="vehicle_filter" value="$(arg vehicle_filter)" />
    <param name="spawn_point" value="$(arg spawn_point)" />
    <param name="role_name" value="$(arg role_name)" />
    <param name="spawn_ego_vehicle" value="$(arg spawn_ego_vehicle)" />
  </node>
</launch>
